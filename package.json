{
  "name": "storybook-addon-rtl",
  "description": "Right-to-left addon for Storybook.",
  "author": {
    "name": "literalpie"
  },
  "version": "0.5.0",
  "license": "MIT",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/literalpie/storybook-addon-rtl.git"
  },
  "files": [
    "dist",
    "register.js",
    "preset.js"
  ],
  "keywords": [
    "storybook",
    "storybook-addon",
    "rtl",
    "directionality",
    "right-to-left",
    "ltr",
    "internationalization",
    "i18n"
  ],
  "storybook": {
    "displayName": "Storybook Addon RTL",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "qwik",
      "solid",
      "web-components"
    ]
  },
  "scripts": {
    "clean:coverage": "rimraf coverage",
    "clean:dist": "rimraf dist",
    "clean": "run-p clean:*",
    "test:lint": "eslint . .storybook",
    "test:unit": "jest src --coverage --config config/jest/config.json",
    "test": "run-s test:*",
    "build": "babel src -d dist",
    "watch": "babel src --out-dir dist --watch",
    "build-storybook": "storybook build",
    "storybook": "storybook dev",
    "prepublishOnly": "run-s clean build"
  },
  "dependencies": {
    "prop-types": "^15.8.1",
    "styled-components": "^5.3.9"
  },
  "devDependencies": {
    "@babel/cli": "^7.21.0",
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@storybook/addon-actions": "^8.0.0-beta.0",
    "@storybook/addon-webpack5-compiler-babel": "^2.0.0",
    "@storybook/builder-webpack5": "^8.0.0-beta.0",
    "@storybook/react": "^8.0.0-beta.0",
    "@storybook/react-webpack5": "^8.0.0-beta.0",
    "@storybook/core-events": "^8.0.0-beta.0",
    "@testing-library/react": "^13.3.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^28.1.0",
    "eslint": "^8.37.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-config-standard-react": "^13.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.7.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.32.2",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-test-renderer": "^18.2.0",
    "rimraf": "^4.4.1",
    "storybook": "^8.0.0-beta.0"
  },
  "peerDependencies": {
    "@storybook/manager-api": "< 9.0.0",
    "@storybook/preview-api": "< 9.0.0",
    "react": "*",
    "react-dom": "*"
  }
}
