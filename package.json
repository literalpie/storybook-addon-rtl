{
  "name": "storybook-addon-rtl",
  "description": "Right-to-left addon for Storybook.",
  "author": "literalpie <benjaminkindle@yahoo.com>",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/literalpie/storybook-addon-rtl.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "keywords": [
    "storybook",
    "storybook-addon",
    "rtl",
    "directionality",
    "right-to-left",
    "ltr",
    "internationalization",
    "i18n",
    "storybook-addons"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.js",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./manager": "./dist/manager.mjs",
    "./preview": "./dist/preview.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "pnpm run clean",
    "build": "tsup",
    "build:watch": "pnpm run build -- --watch",
    "test": "vitest",
    "start": "run-p build:watch 'storybook --quiet'",
    "prerelease": "zx scripts/prepublish-checks.mjs",
    "release": "pnpm run build && auto shipit",
    "eject-ts": "zx scripts/eject-typescript.mjs",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "format": "prettier . --check",
    "lint": "eslint .",
    "checks": "vitest --watch=false && pnpm run format && pnpm run lint"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "7.6.12",
    "@storybook/addon-interactions": "7.6.12",
    "@storybook/addon-links": "7.6.12",
    "@storybook/components": "7.6.12",
    "@storybook/core-events": "7.6.12",
    "@storybook/manager": "^7.6.0",
    "@storybook/manager-api": "7.6.12",
    "@storybook/preview": "^7.6.0",
    "@storybook/preview-api": "7.6.12",
    "@storybook/react": "7.6.12",
    "@storybook/react-vite": "7.6.12",
    "@storybook/testing-library": "^0.2.2",
    "@storybook/theming": "7.6.12",
    "@storybook/types": "7.6.12",
    "@types/node": "^18.15.0",
    "@types/react": "^18.2.52",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@vitejs/plugin-react": "^4.1.1",
    "auto": "^11.0.4",
    "boxen": "^7.1.1",
    "dedent": "^1.5.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "happy-dom": "^13.3.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.3",
    "prompts": "^2.4.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "storybook": "7.6.12",
    "tsup": "^7.2.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^1.2.2",
    "zx": "^7.2.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "bundler": {
    "exportEntries": [
      "src/index.ts"
    ],
    "managerEntries": [
      "src/manager.ts"
    ],
    "previewEntries": [
      "src/preview.ts"
    ]
  },
  "storybook": {
    "displayName": "Storybook Addon RTL",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "preact",
      "web-components",
      "ember",
      "html",
      "svelte",
      "react-native"
    ],
    "icon": "https://user-images.githubusercontent.com/321738/63501763-88dbf600-c4cc-11e9-96cd-94adadc2fd72.png"
  }
}
