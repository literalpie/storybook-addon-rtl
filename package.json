{
  "name": "storybook-addon-rtl",
  "description": "Right-to-left addon for Storybook.",
  "author": "literalpie <benjaminkindle@yahoo.com>",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/literalpie/storybook-addon-rtl.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "keywords": [
    "storybook",
    "storybook-addon",
    "rtl",
    "directionality",
    "right-to-left",
    "ltr",
    "internationalization",
    "i18n",
    "storybook-addons"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.js",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./manager": "./dist/manager.mjs",
    "./preview": "./dist/preview.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "pnpm run clean",
    "build": "tsup",
    "build:watch": "pnpm run build -- --watch",
    "test": "vitest",
    "start": "run-p build:watch 'storybook --quiet'",
    "prerelease": "zx scripts/prepublish-checks.mjs",
    "release": "pnpm run build && auto shipit",
    "eject-ts": "zx scripts/eject-typescript.mjs",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "lint": "eslint .",
    "checks": "vitest --watch=false && pnpm run format && pnpm run lint"
  },
  "devDependencies": {
    "@eslint/js": "9.0.0",
    "@storybook/addon-essentials": "^8.0.6",
    "@storybook/addon-interactions": "^8.0.6",
    "@storybook/addon-links": "^8.0.6",
    "@storybook/components": "^8.0.6",
    "@storybook/core-events": "^8.0.6",
    "@storybook/manager-api": "^8.0.6",
    "@storybook/manager": "^8.0.6",
    "@storybook/preview-api": "^8.0.6",
    "@storybook/preview": "^8.0.6",
    "@storybook/react-vite": "^8.0.6",
    "@storybook/react": "^8.0.6",
    "@storybook/theming": "^8.0.6",
    "@types/eslint__js": "^8.42.3",
    "@storybook/types": "^8.0.6",
    "@types/node": "^20.12.5",
    "@types/react-dom": "^18.2.24",
    "@types/react": "^18.2.74",
    "@vitejs/plugin-react": "^4.1.1",
    "auto": "^11.1.6",
    "boxen": "^7.1.1",
    "dedent": "^1.5.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint": "^9.0.0",
    "happy-dom": "^14.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "prompts": "^2.4.2",
    "react-dom": "^18.2.0",
    "react": "^18.2.0",
    "rimraf": "^5.0.5",
    "storybook": "^8.0.6",
    "tsup": "^8.0.2",
    "typescript-eslint": "7.5.0",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vitest": "^1.4.0",
    "zx": "^8.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "bundler": {
    "exportEntries": [
      "src/index.ts"
    ],
    "managerEntries": [
      "src/manager.ts"
    ],
    "previewEntries": [
      "src/preview.ts"
    ]
  },
  "storybook": {
    "displayName": "Storybook Addon RTL",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "preact",
      "web-components",
      "ember",
      "html",
      "svelte",
      "react-native"
    ],
    "icon": "https://user-images.githubusercontent.com/321738/63501763-88dbf600-c4cc-11e9-96cd-94adadc2fd72.png"
  },
  "dependencies": {
    "@storybook/test": "^8.0.6"
  }
}
