{
  "name": "storybook-addon-rtl",
  "description": "Right-to-left addon for Storybook.",
  "author": "literalpie <benjaminkindle@yahoo.com>",
  "version": "3.0.1",
  "license": "MIT",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/literalpie/storybook-addon-rtl.git"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "keywords": [
    "storybook",
    "storybook-addon",
    "rtl",
    "directionality",
    "right-to-left",
    "ltr",
    "internationalization",
    "i18n",
    "storybook-addons"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./preview": {
      "types": "./dist/preview.d.ts",
      "default": "./dist/preview.js"
    },
    "./preset": "./dist/preset.js",
    "./manager": "./dist/manager.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "pnpm run clean",
    "build": "tsup",
    "build:watch": "pnpm run build --watch",
    "start": "run-p build:watch storybook",
    "release": "pnpm run build && auto shipit",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "lint": "eslint .",
    "checks": "pnpm run format && pnpm run lint"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^11.3.0",
    "@auto-it/first-time-contributor": "^11.3.0",
    "@eslint/js": "9.39.0",
    "@storybook/addon-docs": "^10.0.0",
    "@storybook/icons": "^1.6.0",
    "@storybook/react-vite": "^10.0.0",
    "@types/node": "^24.10.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "auto": "^11.3.0",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "rimraf": "^6.1.0",
    "storybook": "^10.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "8.46.2",
    "vite": "^7.1.12"
  },
  "peerDependencies": {
    "storybook": "^10.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "bundler": {
    "managerEntries": [
      "src/manager.ts"
    ],
    "previewEntries": [
      "src/preview.ts",
      "src/index.ts"
    ]
  },
  "storybook": {
    "displayName": "Storybook Addon RTL",
    "supportedFrameworks": [
      "supported-frameworks"
    ],
    "icon": "https://user-images.githubusercontent.com/321738/63501763-88dbf600-c4cc-11e9-96cd-94adadc2fd72.png"
  },
  "auto": {
    "plugins": [
      "npm",
      "conventional-commits",
      "first-time-contributor"
    ]
  },
  "packageManager": "pnpm@10.20.0"
}
