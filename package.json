{
  "name": "storybook-addon-rtl",
  "description": "Right-to-left addon for Storybook.",
  "author": "literalpie <benjaminkindle@yahoo.com>",
  "version": "1.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/literalpie/storybook-addon-rtl.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "keywords": [
    "storybook",
    "storybook-addon",
    "rtl",
    "directionality",
    "right-to-left",
    "ltr",
    "internationalization",
    "i18n",
    "storybook-addons"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.js",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./manager": "./dist/manager.mjs",
    "./preview": "./dist/preview.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "pnpm run clean",
    "build": "tsup",
    "build:watch": "pnpm run build -- --watch",
    "test": "vitest",
    "start": "run-p build:watch 'storybook --quiet'",
    "release": "pnpm run build && auto shipit",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "lint": "eslint .",
    "checks": "vitest --watch=false && pnpm run format && pnpm run lint"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^11.3.0",
    "@auto-it/first-time-contributor": "^11.3.0",
    "@eslint/js": "9.11.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.17.5",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "auto": "^11.3.0",
    "eslint": "^9.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.37.2",
    "happy-dom": "^15.8.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prompts": "^2.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "@storybook/react": "9.0.0-alpha.17",
    "@storybook/react-vite": "9.0.0-alpha.17",
    "storybook": "^9.0.0-alpha.17",
    "tsup": "^8.3.5",
    "typescript": "^5.6.3",
    "typescript-eslint": "8.6.0",
    "vite": "^5.4.10",
    "vitest": "^2.1.4"
  },
  "peerDependencies": {
    "storybook": "^9.0.0-alpha.17"
  },
  "publishConfig": {
    "access": "public"
  },
  "bundler": {
    "exportEntries": [
      "src/index.ts"
    ],
    "managerEntries": [
      "src/manager.ts"
    ],
    "previewEntries": [
      "src/preview.ts"
    ]
  },
  "storybook": {
    "displayName": "Storybook Addon RTL",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "preact",
      "web-components",
      "ember",
      "html",
      "svelte",
      "react-native"
    ],
    "icon": "https://user-images.githubusercontent.com/321738/63501763-88dbf600-c4cc-11e9-96cd-94adadc2fd72.png"
  },
  "auto": {
    "plugins": [
      "npm",
      "conventional-commits",
      "first-time-contributor"
    ]
  },
  "packageManager": "pnpm@9.12.3+sha256.24235772cc4ac82a62627cd47f834c72667a2ce87799a846ec4e8e555e2d4b8b"
}
