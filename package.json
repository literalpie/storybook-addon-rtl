{
  "name": "storybook-addon-rtl",
  "description": "Right-to-left addon for Storybook.",
  "author": "literalpie <benjaminkindle@yahoo.com>",
  "version": "2.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/literalpie/storybook-addon-rtl.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "keywords": [
    "storybook",
    "storybook-addon",
    "rtl",
    "directionality",
    "right-to-left",
    "ltr",
    "internationalization",
    "i18n",
    "storybook-addons"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.js",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./manager": "./dist/manager.mjs",
    "./preview": "./dist/preview.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "pnpm run clean",
    "build": "tsup",
    "build:watch": "pnpm run build --watch",
    "start": "run-p build:watch storybook",
    "release": "pnpm run build && auto shipit",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "lint": "eslint .",
    "checks": "pnpm run format && pnpm run lint"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^11.3.0",
    "@auto-it/first-time-contributor": "^11.3.0",
    "@eslint/js": "9.28.0",
    "@storybook/addon-docs": "9.0.2",
    "@storybook/react": "9.0.2",
    "@storybook/react-vite": "9.0.2",
    "@types/node": "^22.15.29",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@vitejs/plugin-react": "^4.5.0",
    "auto": "^11.3.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "rimraf": "^6.0.1",
    "storybook": "^9.0.2",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "8.33.0",
    "vite": "^6.3.5"
  },
  "peerDependencies": {
    "storybook": "^9.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "bundler": {
    "exportEntries": [
      "src/index.ts"
    ],
    "managerEntries": [
      "src/manager.ts"
    ],
    "previewEntries": [
      "src/preview.ts"
    ]
  },
  "storybook": {
    "displayName": "Storybook Addon RTL",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "preact",
      "web-components",
      "ember",
      "html",
      "svelte",
      "react-native"
    ],
    "icon": "https://user-images.githubusercontent.com/321738/63501763-88dbf600-c4cc-11e9-96cd-94adadc2fd72.png"
  },
  "auto": {
    "plugins": [
      "npm",
      "conventional-commits",
      "first-time-contributor"
    ]
  },
  "packageManager": "pnpm@10.11.0"
}
