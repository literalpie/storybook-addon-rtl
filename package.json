{
  "name": "storybook-addon-rtl",
  "description": "Right-to-left addon for Storybook.",
  "author": "literalpie <benjaminkindle@yahoo.com>",
  "version": "1.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/literalpie/storybook-addon-rtl.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "README.md",
    "*.js",
    "*.d.ts"
  ],
  "keywords": [
    "storybook",
    "storybook-addon",
    "rtl",
    "directionality",
    "right-to-left",
    "ltr",
    "internationalization",
    "i18n",
    "storybook-addons"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "node": "./dist/index.js",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    },
    "./manager": "./dist/manager.mjs",
    "./preview": "./dist/preview.mjs",
    "./package.json": "./package.json"
  },
  "scripts": {
    "clean": "rimraf ./dist",
    "prebuild": "pnpm run clean",
    "build": "tsup",
    "build:watch": "pnpm run build -- --watch",
    "test": "vitest",
    "start": "run-p build:watch 'storybook --quiet'",
    "release": "pnpm run build && auto shipit",
    "storybook": "storybook dev -p 6006 --no-open",
    "build-storybook": "storybook build",
    "format": "prettier . --check",
    "format:write": "prettier . --write",
    "lint": "eslint .",
    "checks": "vitest --watch=false && pnpm run format && pnpm run lint"
  },
  "devDependencies": {
    "@auto-it/conventional-commits": "^11.2.1",
    "@auto-it/first-time-contributor": "^11.2.1",
    "@eslint/js": "9.11.0",
    "@storybook/addon-essentials": "^7.0.0",
    "@storybook/addon-interactions": "^7.0.0",
    "@storybook/addon-links": "^7.0.0",
    "@storybook/core-common": "^7.6.20",
    "@storybook/components": "^7.0.0",
    "@storybook/core-events": "^7.0.0",
    "@storybook/manager": "^7.0.0",
    "@storybook/manager-api": "^7.0.0",
    "@storybook/builder-manager": "7.6.20",
    "@storybook/preview": "^7.0.0",
    "@storybook/preview-api": "^7.0.0",
    "@storybook/react": "^7.0.0",
    "@storybook/react-vite": "^7.0.0",
    "@storybook/theming": "^7.0.0",
    "@storybook/types": "^7.0.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^20.14.14",
    "esbuild": "0.20.2",
    "@types/react": "^18.3.8",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "auto": "^11.2.1",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.36.1",
    "happy-dom": "^15.7.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "prompts": "^2.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rimraf": "^6.0.1",
    "storybook": "^7.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "8.6.0",
    "vite": "^5.4.7",
    "vitest": "^2.1.1"
  },
  "publishConfig": {
    "access": "public"
  },
  "bundler": {
    "exportEntries": [
      "src/index.ts"
    ],
    "managerEntries": [
      "src/manager.ts"
    ],
    "previewEntries": [
      "src/preview.ts"
    ]
  },
  "storybook": {
    "displayName": "Storybook Addon RTL",
    "supportedFrameworks": [
      "react",
      "vue",
      "angular",
      "preact",
      "web-components",
      "ember",
      "html",
      "svelte",
      "react-native"
    ],
    "icon": "https://user-images.githubusercontent.com/321738/63501763-88dbf600-c4cc-11e9-96cd-94adadc2fd72.png"
  },
  "auto": {
    "plugins": [
      "npm",
      "conventional-commits",
      "first-time-contributor"
    ]
  },
  "packageManager": "pnpm@9.6.0+sha256.dae0f7e822c56b20979bb5965e3b73b8bdabb6b8b8ef121da6d857508599ca35"
}
