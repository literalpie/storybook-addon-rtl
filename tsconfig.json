{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "incremental": false,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "preserve",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "target": "esnext"
  },
  "include": ["src/**/*", "tsup.config.ts"]
}
